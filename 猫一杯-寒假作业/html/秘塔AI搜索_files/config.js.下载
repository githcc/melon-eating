/**
 * 配置一些全局的公共变量
 * 下述配置文件中各参数含义
 * domain：当前域
 */

var deployType = function() {
    var deployType = ''
    if (location.hostname === 'metaso.cn') {
        deployType = 'PRODUCT'
    } else if (location.hostname === 'metamiaoalph.metasotalaw.cn') {
        deployType = 'ALPH'
    } else if (location.hostname === 'metamiaobeta.metasotalaw.cn') {
      deployType = 'BETA'
    } else if (location.hostname === 'metamiao.metaso.cn') {
        deployType = 'RELEASE'
    } else {
        deployType = 'TEST'
    }
    return deployType
}

var config = {}

if (deployType() === 'PRODUCT') {
    config = { 
        deployType: deployType(),
        domain: 'https://metaso.cn',
    }
} else if (deployType() === 'ALPH') {
    config = {
        deployType: deployType(),
        domain: 'https://metamiaoalph.metasotalaw.cn',
    }
} else if (deployType() === 'BETA') {
    config = {
        deployType: deployType(),
        domain: 'https://metamiaobeta.metasotalaw.cn',
    }
} else if (deployType() === 'RELEASE') {
    config = {
        deployType: deployType(),
        domain: 'https://metamiao.metaso.cn',
    }
} else {
    // 本地开发环境
    config = {
        deployType: deployType(),
        domain: 'http://localhost:3001/',
    }
}
